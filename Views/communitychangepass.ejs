<script>
<% include partials/script %>

function change()
{
	var oldP=document.getElementById("oldPassword").value;
	var newP=document.getElementById("newPassword").value;
	if(oldP=="" || newP=="")
	{
		alert("please enter both passwords");
		return;
	}
	var changeP=new XMLHttpRequest();
	changeP.open("POST","/changeP");
	changeP.setRequestHeader("Content-Type", "application/json");
	changeP.onload=function()
	{
			var check=JSON.parse(changeP.responseText);
			if(check==1)
			{
				alert("password changed successfully");
			}
			else
			{
				alert("incorrect old password");
			}
	}
	changeP.send(JSON.stringify({oldp:oldP,newp:newP}));
}
</script>
