<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css">
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.css">
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<style>
		body{
		  color: #575757 !important;
		}
		.content-div{
		  margin-top:2%;
		  width: 100%;
		}
		.null-link{
		  color: black
		}
		.null-link:hover{
		  color:black;
		  text-decoration: none;
		}
		.panel-main-div:hover{
		  box-shadow:0 3px 10px 0 rgba(115,143,147,.2);
		}
		@media(max-width: 768px){
		  .content-div{
			margin-top:5%;
			width: 100% !important;
		  }
		}
	</style>
</head>

<body>
<% include partials/header %>
<div id="main">
<div class="container-fluid page-content-div" style="padding:0;margin-top:5%">
            <div class="row">
               <div class="col-lg-12 scoll-possible" style="padding:0">
<div class="content-div">
    <div class="container">
        <div class="card allSidesSoft" style="background:rgb(249, 249, 249)">
			<div class="card-body">
				<div class="d-flex pc">
					<div class="image-container">
						<img src="default.png" id="user-profile-image" style="width: 150px; height: 150px" class="img-thumbnail allSidesSoft">
					</div>
				</div>
				<br>
				<br>
				
				<div class="col-sm-6">
					<div class="panel panel-default allSidesSoft panel-main-div">
						<div class="panel-heading">Email</div>
						<div class="panel-body" id="email"></div>
					</div>
				</div>
			
				<div class="col-sm-6">
					<div class="panel panel-default allSidesSoft panel-main-div">
						<div class="panel-heading">Gender</div>
						<div class="panel-body" style="text-transform: capitalize;" id="gender"></div>
					 </div>
				</div>
					 
				<div class="col-sm-6">
					<div class="panel panel-default allSidesSoft panel-main-div">
						<div class="panel-heading">Name</div>
						<div class="panel-body" id="na"></div>
					</div>
				</div>
					
				<div class="col-sm-6">
					<div class="panel panel-default allSidesSoft panel-main-div">
						<div class="panel-heading">City</div>
						<div class="panel-body" id="city"></div>
					</div>
				</div>
		  
				<div class="col-sm-6">
					<div class="panel panel-default allSidesSoft panel-main-div">
						<div class="panel-heading">D.O.B</div>
						<div class="panel-body null-link" id="dobtext"></div>
					</div>
				</div>
		   
				<div class="col-sm-6">
					<div class="panel panel-default allSidesSoft panel-main-div">
						<div class="panel-heading">Phone</div>
						<div class="panel-body" id="number"></div>
					</div>
				</div>		
			</div>
		</div>
    </div>
</div>
<br>

</div>
</div>
</div>
</div>
</body>

<script>
<% include partials/script %>
var email=document.getElementById("email");
var gender=document.getElementById("gender");
var na=document.getElementById("na");
var city=document.getElementById("city");
var dob=document.getElementById("dobtext");
var phone=document.getElementById("number");
var image=document.getElementById("user-profile-image");
	var data= new XMLHttpRequest();
	data.open("GET", "/data");
	data.onload=function()
	{
		var info=(JSON.parse(data.responseText));
		email.innerHTML=info[0].email;
		gender.innerHTML=info[0].gender;
		na.innerHTML=info[0].name;
		city.innerHTML=info[0].city;
		dob.innerHTML=info[0].dob;
		phone.innerHTML=info[0].phone;
		if(info[0].path!=null)
		image.setAttribute("src",info[0].path.substr(6));
	};
	data.send();
</script>
</html>